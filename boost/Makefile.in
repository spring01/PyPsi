srcdir = @srcdir@
abs_top_builddir = @abs_top_builddir@
dont_compile_boost = @have_boost@

BOOSTVER = @BOOSTVER@
CC = @CC@

ifeq ($(CC), icc)
	CC = intel
endif

all: default
default: boost.compiled

install:

clean:
	rm -f boost.compiled

dclean:

# Steps taken:
#  1. If directory BOOSTVER does not exist, untar the source file.
#  2. Build Boost with the components we need and move the libraries to a
#     central location (bin.v2/libs)
#  3. Touch the target file so that the above dependencies will be fulfilled.
boost.compiled:
ifeq ($(dont_compile_boost),0)
	if [ ! -d $(BOOSTVER) ]; then (cat $(srcdir)/$(BOOSTVER).tar.gz_part_* | tar zx -C $(abs_top_builddir)/boost); fi
	(cd $(BOOSTVER) && ./bootstrap.sh --with-libraries=filesystem,regex,serialization,system,thread && ./b2 toolset=$(CC) cflags=-fpic && cd bin.v2/libs && find . -name '*.a' -exec cp {} . \;)
	touch boost.compiled
endif

